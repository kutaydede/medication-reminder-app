<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".AddMedicationToUserActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true" >

        <!-- Geri dönüş düğmesi -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button_description"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:onClick="Back_btn" />
        <TextView
            android:id="@+id/AddMedicationTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı İlaç Kayıtı"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="379dp"
            android:layout_height="106dp"
            android:src="@drawable/icons8_medication_64">

        </ImageView>

        <EditText
            android:id="@+id/IlacId_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/icons8_medicine_24"
            android:hint="İlaç Id"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/TcNo_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint="Tc Kimlik No"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/SabaheditTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/icons8_time_24"
            android:ems="10"
            android:hint="Sabah Kullanımı"
            android:inputType="time"
            android:padding="18dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/OgleeditTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/icons8_time_24"
            android:ems="10"
            android:hint="Öğle Kullanımı"
            android:inputType="time"
            android:padding="18dp"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/AksameditTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableLeft="@drawable/icons8_time_24"
            android:ems="10"
            android:hint="Akşam Kullanımı"
            android:inputType="time"
            android:padding="18dp"
            android:textColorHint="@color/white" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İlaç Ekle"
            android:backgroundTint="@color/white"
            android:textColor="#008EFF"
            android:padding="18dp"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:id="@+id/AddMedicationToUser_btn"
            />

    </LinearLayout>

</RelativeLayout>